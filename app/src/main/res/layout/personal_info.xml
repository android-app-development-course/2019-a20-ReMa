<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonalInfo"
    android:background="#F0F0F0"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2d5d81"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_personal_info"
            android:layout_width="27dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"

            android:background="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="账号资料"
            android:textStyle="italic"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"

            android:background="#2d5d81"
            android:gravity="center_vertical|right"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:text="编辑"
            android:textColor="#ffffff"
            android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:minHeight="70dp"
            android:text="    昵称："
            android:textSize="15dp" />
        <EditText
            android:id="@+id/edittext_user_nicheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="#ffffff"
            android:textSize="15dp"
            android:text="Name" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:minHeight="70dp"
            android:text="    账号："
            android:textSize="15dp" />
        <EditText
            android:id="@+id/edittext_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="#ffffff"
            android:textSize="15dp"
            android:text="Name" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:minHeight="70dp"
            android:text="    性别："
            android:textSize="15dp" />
        <EditText
            android:id="@+id/edittext_user_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="#ffffff"
            android:textSize="15dp"
            android:text="Name" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:minHeight="70dp"
            android:text="    学校："
            android:textSize="15dp" />
        <EditText
            android:id="@+id/edittext_user_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="#ffffff"
            android:textSize="15dp"
            android:text="Name" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:minHeight="70dp"
            android:text="    专业："
            android:textSize="15dp" />
        <EditText
            android:id="@+id/edittext_user_majority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="#ffffff"
            android:textSize="15dp"
            android:text="Name" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />




</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
